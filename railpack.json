{
  "version": "1",
  "metadata": {
    "name": "disco"
  },
  "build": {
    "provider": "node",
    "nodeVersion": "20.x",
    "steps": {
      "install": {
        "commands": [
          "corepack enable",
          "yarn install --immutable"
        ]
      },
      "build": {
        "commands": [
          "yarn build:server",
          "yarn build:next"
        ]
      }
    }
  },
  "deploy": {
    "startCommand": "node dist/server.js",
    "healthCheckPath": "/health",
    "healthCheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}
