{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://disco-mcp.up.railway.app/contracts/anthropic/messages.request.json",
  "title": "anthropic.messages.request",
  "description": "Request schema for Anthropic Messages API (Claude)",
  "type": "object",
  "additionalProperties": false,
  "required": ["model", "messages", "max_tokens"],
  "properties": {
    "model": {
      "type": "string",
      "description": "ID of the model to use",
      "examples": ["claude-3-opus-20240229", "claude-3-sonnet-20240229", "claude-3-haiku-20240307"]
    },
    "messages": {
      "type": "array",
      "description": "Array of message objects",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["role", "content"],
        "properties": {
          "role": {
            "type": "string",
            "enum": ["user", "assistant"],
            "description": "Role of the message author"
          },
          "content": {
            "oneOf": [
              { "type": "string" },
              {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["type"],
                  "properties": {
                    "type": {
                      "type": "string",
                      "enum": ["text", "image"]
                    },
                    "text": {
                      "type": "string",
                      "description": "Text content"
                    },
                    "source": {
                      "type": "object",
                      "properties": {
                        "type": {
                          "type": "string",
                          "const": "base64"
                        },
                        "media_type": {
                          "type": "string",
                          "enum": ["image/jpeg", "image/png", "image/gif", "image/webp"]
                        },
                        "data": {
                          "type": "string",
                          "description": "Base64-encoded image data"
                        }
                      }
                    }
                  }
                }
              }
            ],
            "description": "Content of the message (string or array of content blocks)"
          }
        }
      }
    },
    "max_tokens": {
      "type": "integer",
      "minimum": 1,
      "description": "Maximum number of tokens to generate"
    },
    "system": {
      "type": "string",
      "description": "System prompt to guide Claude's behavior"
    },
    "temperature": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "default": 1,
      "description": "Sampling temperature (0-1). Higher values make output more random"
    },
    "top_p": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Nucleus sampling parameter"
    },
    "top_k": {
      "type": "integer",
      "minimum": 0,
      "description": "Only sample from the top K options"
    },
    "stop_sequences": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "maxItems": 4,
      "description": "Custom text sequences that will cause the model to stop generating"
    },
    "stream": {
      "type": "boolean",
      "default": false,
      "description": "Whether to stream the response"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "user_id": {
          "type": "string",
          "description": "Identifier for the end-user"
        }
      }
    },
    "tools": {
      "type": "array",
      "description": "List of tools the model may use",
      "items": {
        "type": "object",
        "required": ["name", "description", "input_schema"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the tool"
          },
          "description": {
            "type": "string",
            "description": "Description of what the tool does"
          },
          "input_schema": {
            "type": "object",
            "description": "JSON Schema for the tool input"
          }
        }
      }
    }
  }
}
