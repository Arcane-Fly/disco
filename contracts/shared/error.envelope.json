{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://disco-mcp.up.railway.app/contracts/shared/error.envelope.json",
  "title": "error.envelope",
  "description": "Standard error envelope for all MCP operations",
  "type": "object",
  "additionalProperties": false,
  "required": ["error"],
  "properties": {
    "error": {
      "type": "object",
      "additionalProperties": false,
      "required": ["code", "message"],
      "properties": {
        "code": {
          "type": "string",
          "enum": [
            "INVALID_INPUT",
            "AUTH_REQUIRED",
            "NOT_FOUND",
            "RATE_LIMIT",
            "UPSTREAM_ERROR",
            "UNAVAILABLE",
            "INTERNAL_ERROR"
          ],
          "description": "Standard error code indicating the type of failure"
        },
        "message": {
          "type": "string",
          "description": "Human-readable error message"
        },
        "retriable": {
          "type": "boolean",
          "default": false,
          "description": "Whether the operation can be retried"
        },
        "details": {
          "type": "object",
          "additionalProperties": true,
          "description": "Additional context-specific error details"
        }
      }
    }
  }
}
